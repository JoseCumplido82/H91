<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityMensajeNotificacion">

    <TextView
        android:id="@+id/txt_Notificaciones4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/a_adir_mensaje_notificacion"
        android:textColor="@color/cardview_dark_background"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edt_asunto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:gravity="center"
        android:hint="@string/asunto_notificacion"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/txt_Notificaciones4"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/txt_Notificaciones4"
        app:layout_constraintTop_toBottomOf="@+id/txt_Notificaciones4"
        android:autofillHints="" />

    <EditText
        android:id="@+id/edt_mensajeNotificacion"
        android:layout_width="371dp"
        android:layout_height="151dp"
        android:layout_marginTop="20dp"
        android:autofillHints=""
        android:ems="10"
        android:gravity="bottom"
        android:hint="@string/introduce_mensaje_para_la_notificacion"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/edt_asunto"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="@+id/edt_asunto"
        app:layout_constraintTop_toBottomOf="@+id/edt_asunto" />

    <Button
        android:id="@+id/bt_enviarMensaje"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="52dp"
        android:text="@string/enviar"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/edt_mensajeNotificacion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/edt_mensajeNotificacion"
        app:layout_constraintTop_toBottomOf="@+id/edt_mensajeNotificacion" />

    <Button
        android:id="@+id/bt_borrarMensaje"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/borrar"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/edt_mensajeNotificacion"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/edt_mensajeNotificacion"
        app:layout_constraintTop_toBottomOf="@+id/edt_mensajeNotificacion" />

    <Button
        android:id="@+id/bt_cancelar"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="152dp"
        android:text="@string/cancelar"
        app:backgroundTint="@color/cardview_dark_background"
        app:layout_constraintEnd_toStartOf="@+id/bt_borrarMensaje"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toEndOf="@+id/bt_enviarMensaje"
        app:layout_constraintTop_toBottomOf="@+id/edt_mensajeNotificacion" />
</androidx.constraintlayout.widget.ConstraintLayout>