<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityPlanificacionTiempo">

    <TextView
        android:id="@+id/txt_PlanificacionTiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/planificacion_de_tiempo2"
        android:textColor="@color/cardview_dark_background"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_verPlanificacion"
        android:layout_width="230dp"
        android:layout_height="70dp"
        android:layout_marginTop="84dp"
        android:onClick="irAcalendario"
        android:text="@string/ir_a_planificacion_de_tiempo"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/txt_PlanificacionTiempo"
        app:layout_constraintHorizontal_bias="0.739"
        app:layout_constraintStart_toStartOf="@+id/txt_PlanificacionTiempo"
        app:layout_constraintTop_toBottomOf="@+id/txt_PlanificacionTiempo" />

    <Button
        android:id="@+id/bt_volver18"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="@string/volver"
        app:backgroundTint="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="@+id/bt_verPlanificacion"
        app:layout_constraintStart_toStartOf="@+id/bt_verPlanificacion"
        app:layout_constraintTop_toBottomOf="@+id/bt_verPlanificacion" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="40dp"
        android:layout_height="70dp"
        app:layout_constraintEnd_toStartOf="@+id/bt_verPlanificacion"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bt_verPlanificacion"
        app:srcCompat="@drawable/outline_event_black_48dp" />

</androidx.constraintlayout.widget.ConstraintLayout>