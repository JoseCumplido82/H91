<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityInformacion">

    <ImageView
        android:id="@+id/img_logo9"
        android:layout_width="223dp"
        android:layout_height="176dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/txt_informacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/informacion2"
        android:textColor="@color/cardview_dark_background"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/img_logo9"
        app:layout_constraintStart_toStartOf="@+id/img_logo9"
        app:layout_constraintTop_toBottomOf="@+id/img_logo9" />

    <Button
        android:id="@+id/bt_calendario"
        android:layout_width="206dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:text="@string/calendario"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/txt_informacion"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="@+id/txt_informacion"
        app:layout_constraintTop_toBottomOf="@+id/txt_informacion" />

    <Button
        android:id="@+id/bt_riesgoslaborales"
        android:layout_width="206dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="@string/riesgos_laborales"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/bt_calendario"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_calendario"
        app:layout_constraintTop_toBottomOf="@+id/bt_calendario" />

    <Button
        android:id="@+id/bt_incendios"
        android:layout_width="206dp"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:text="@string/prevencion"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/bt_riesgoslaborales"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_riesgoslaborales"
        app:layout_constraintTop_toBottomOf="@+id/bt_riesgoslaborales" />

    <Button
        android:id="@+id/bt_volver02"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="76dp"
        android:text="@string/volver"
        app:backgroundTint="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="@+id/bt_incendios"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="@+id/bt_incendios"
        app:layout_constraintTop_toBottomOf="@+id/bt_incendios" />
</androidx.constraintlayout.widget.ConstraintLayout>