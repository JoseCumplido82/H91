<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityVerPlantilla">

    <Button
        android:id="@+id/bt_volver29"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="172dp"
        android:text="@string/volver"
        app:backgroundTint="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_VerSupervisor3" />

    <Button
        android:id="@+id/bt_VerSupervisor3"
        android:layout_width="230dp"
        android:layout_height="70dp"
        android:layout_marginTop="40dp"
        android:text="ver supervisores"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/bt_verEmpleado2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_verEmpleado2"
        app:layout_constraintTop_toBottomOf="@+id/bt_verEmpleado2" />

    <Button
        android:id="@+id/bt_verEmpleado2"
        android:layout_width="230dp"
        android:layout_height="70dp"
        android:layout_marginTop="64dp"
        android:text="@string/ver_empleados"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/txt_VerPlantilla"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="@+id/txt_VerPlantilla"
        app:layout_constraintTop_toBottomOf="@+id/txt_VerPlantilla" />

    <TextView
        android:id="@+id/txt_VerPlantilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="VER PLANTILLA"
        android:textColor="@color/cardview_dark_background"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>