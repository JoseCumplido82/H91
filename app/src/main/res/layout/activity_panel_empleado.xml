<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PanelEmpleado">

    <ImageView
        android:id="@+id/img_logo2"
        android:layout_width="223dp"
        android:layout_height="176dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/bt_nominas"
        android:layout_width="254dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/nominas"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/bt_notificaciones"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_notificaciones"
        app:layout_constraintTop_toBottomOf="@+id/bt_notificaciones" />

    <Button
        android:id="@+id/bt_cerrar"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:text="@string/cerrar_sesion"
        app:backgroundTint="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="@+id/bt_documentos"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/bt_documentos"
        app:layout_constraintTop_toBottomOf="@+id/bt_documentos" />

    <Button
        android:id="@+id/bt_documentos"
        android:layout_width="254dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/documentos"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/bt_solicitudes"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_solicitudes"
        app:layout_constraintTop_toBottomOf="@+id/bt_solicitudes" />

    <Button
        android:id="@+id/bt_solicitudes"
        android:layout_width="254dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/solicitudes"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/bt_nominas"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_nominas"
        app:layout_constraintTop_toBottomOf="@+id/bt_nominas" />

    <Button
        android:id="@+id/bt_notificaciones"
        android:layout_width="254dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:gravity="center"

        android:text="@string/notificaciones"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/img_logo2"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/img_logo2"
        app:layout_constraintTop_toBottomOf="@+id/img_logo2" />

    <TextView
        android:id="@+id/txt_Bienvenido"
        android:layout_width="281dp"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/bienvenido"
        android:textColor="@color/cardview_dark_background"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/img_logo2"
        app:layout_constraintStart_toStartOf="@+id/img_logo2"
        app:layout_constraintTop_toBottomOf="@+id/img_logo2" />

</androidx.constraintlayout.widget.ConstraintLayout>