<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityGestionPlantilla">

    <TextView
        android:id="@+id/txt_gestionPlantilla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/gestion_plantilla2"
        android:textColor="@color/cardview_dark_background"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_verEmpleado"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_marginTop="30dp"
        android:text="@string/ver_empleados"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/txt_gestionPlantilla"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="@+id/txt_gestionPlantilla"
        app:layout_constraintTop_toBottomOf="@+id/txt_gestionPlantilla" />

    <Button
        android:id="@+id/bt_borrarEmpleado"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:text="@string/borrar_empleado"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/bt_a単adirEmpleado"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_a単adirEmpleado"
        app:layout_constraintTop_toBottomOf="@+id/bt_a単adirEmpleado" />

    <Button
        android:id="@+id/bt_a単adirEmpleado"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:text="@string/a_adir_empleado"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/bt_verEmpleado"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="@+id/bt_verEmpleado"
        app:layout_constraintTop_toBottomOf="@+id/bt_verEmpleado" />

    <Button
        android:id="@+id/bt_volver14"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="108dp"
        android:text="@string/volver"
        app:backgroundTint="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="@+id/bt_borrarEmpleado"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/bt_borrarEmpleado"
        app:layout_constraintTop_toBottomOf="@+id/bt_borrarEmpleado" />

    <Button
        android:id="@+id/bt_insertarDepartamento"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:text="@string/crear_departamento"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/bt_borrarEmpleado"
        app:layout_constraintStart_toStartOf="@+id/bt_borrarEmpleado"
        app:layout_constraintTop_toBottomOf="@+id/bt_borrarEmpleado" />
</androidx.constraintlayout.widget.ConstraintLayout>