<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRRHH">

    <TextView
        android:id="@+id/txt_Bienvenido2"
        android:layout_width="281dp"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/bienvenido"
        android:textColor="@color/cardview_dark_background"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bt_gestionPlantilla"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_marginTop="52dp"
        android:text="@string/gestion_plantilla"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/txt_Bienvenido2"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/txt_Bienvenido2"
        app:layout_constraintTop_toBottomOf="@+id/txt_Bienvenido2" />

    <Button
        android:id="@+id/bt_planificacionTiempo"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:text="@string/planificacion_de_tiempo"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/bt_gestionPlantilla"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/bt_gestionPlantilla"
        app:layout_constraintTop_toBottomOf="@+id/bt_gestionPlantilla" />

    <Button
        android:id="@+id/bt_crearNotificacion"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_marginTop="116dp"
        android:text="@string/crear_notificacion"
        android:visibility="invisible"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/bt_planificacionTiempo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_planificacionTiempo"
        app:layout_constraintTop_toBottomOf="@+id/bt_planificacionTiempo" />

    <Button
        android:id="@+id/bt_cerrarSesionRRHH"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="@string/cerrar_sesion"
        app:backgroundTint="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="@+id/bt_crearNotificacion"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="@+id/bt_crearNotificacion"
        app:layout_constraintTop_toBottomOf="@+id/bt_crearNotificacion" />

    <Button
        android:id="@+id/bt_cambiarPassRRHH"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:text="@string/cambiar_contrase_a"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/bt_planificacionTiempo"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@+id/bt_planificacionTiempo"
        app:layout_constraintTop_toBottomOf="@+id/bt_planificacionTiempo" />
</androidx.constraintlayout.widget.ConstraintLayout>