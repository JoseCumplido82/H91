<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRRHH">

    <ImageView
        android:id="@+id/img_logo12"
        android:layout_width="223dp"
        android:layout_height="176dp"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/txt_Bienvenido2"
        android:layout_width="281dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/bienvenido"
        android:textColor="@color/cardview_dark_background"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/img_logo12"
        app:layout_constraintStart_toStartOf="@+id/img_logo12"
        app:layout_constraintTop_toBottomOf="@+id/img_logo12" />

    <Button
        android:id="@+id/bt_gestionPlantilla"
        android:layout_width="254dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="@string/gestion_plantilla"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/txt_Bienvenido2"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="@+id/txt_Bienvenido2"
        app:layout_constraintTop_toBottomOf="@+id/txt_Bienvenido2" />

    <Button
        android:id="@+id/bt_planificacionTiempo"
        android:layout_width="254dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="@string/planificacion_de_tiempo"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/bt_gestionPlantilla"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/bt_gestionPlantilla"
        app:layout_constraintTop_toBottomOf="@+id/bt_gestionPlantilla" />

    <Button
        android:id="@+id/bt_crearNotificacion"
        android:layout_width="254dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:text="@string/crear_notificacion"
        app:backgroundTint="@color/design_default_color_error"
        app:layout_constraintEnd_toEndOf="@+id/bt_planificacionTiempo"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/bt_planificacionTiempo"
        app:layout_constraintTop_toBottomOf="@+id/bt_planificacionTiempo" />

    <Button
        android:id="@+id/bt_cerrarSesionRRHH"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="36dp"
        android:text="@string/cerrar_sesion"
        app:backgroundTint="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="@+id/bt_crearNotificacion"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/bt_crearNotificacion"
        app:layout_constraintTop_toBottomOf="@+id/bt_crearNotificacion" />
</androidx.constraintlayout.widget.ConstraintLayout>