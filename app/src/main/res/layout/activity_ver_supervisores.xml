<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerSupervisores">

    <Button
        android:id="@+id/bt_volver24"
        android:layout_width="160dp"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:text="@string/volver"
        app:backgroundTint="@color/cardview_dark_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_update2" />

    <ImageView
        android:id="@+id/img_update2"
        android:layout_width="107dp"
        android:layout_height="64dp"
        android:contentDescription="@string/todo10"
        android:onClick="refrescarSupervisores"
        app:layout_constraintEnd_toEndOf="@+id/rv_supervisores"
        app:layout_constraintStart_toStartOf="@+id/rv_supervisores"
        app:layout_constraintTop_toBottomOf="@+id/rv_supervisores"
        app:srcCompat="@drawable/outline_cached_black_48dp" />

    <TextView
        android:id="@+id/txt_verEmpleados2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:text="@string/lista_de_supervisores"
        android:textColor="@color/cardview_dark_background"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_supervisores"
        android:layout_width="290dp"
        android:layout_height="266dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_verEmpleados2"
        app:layout_constraintHorizontal_bias="0.461"
        app:layout_constraintStart_toStartOf="@+id/txt_verEmpleados2"
        app:layout_constraintTop_toBottomOf="@+id/txt_verEmpleados2" />
</androidx.constraintlayout.widget.ConstraintLayout>